<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ap.snehil.kosten.EditorActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="19dp"
        android:text="Name :"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBaseline="@+id/tv1"
        android:layout_alignBottom="@+id/tv1"
        android:layout_toRightOf="@+id/tv1"
        android:layout_toEndOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:layout_below="@+id/etName"
        android:layout_marginTop="33dp"
        android:text="Date :"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/etDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:layout_alignLeft="@+id/etName"
        android:layout_alignStart="@+id/etName" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Purpose :"
        android:textSize="20dp"
        android:layout_below="@+id/etDate"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2" />

    <EditText
        android:id="@+id/etPurpose"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv3"
        android:layout_alignBottom="@+id/tv3"
        android:layout_alignLeft="@+id/etDate"
        android:layout_alignStart="@+id/etDate" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Money Lended :"
        android:textSize="20dp"
        android:layout_below="@+id/etPurpose"
        android:layout_alignLeft="@+id/tv3"
        android:layout_alignStart="@+id/tv3" />

    <EditText
        android:id="@+id/etGiven"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignLeft="@+id/etPurpose"
        android:layout_alignStart="@+id/etPurpose" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Money Borrowed:"
        android:textSize="20dp"
        android:layout_below="@+id/tv4"
        android:layout_toLeftOf="@+id/etGiven"
        android:layout_alignLeft="@+id/tv4"
        android:layout_alignStart="@+id/tv4" />
    <EditText
        android:id="@+id/etTaken"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv5"
        android:layout_alignLeft="@+id/etGiven"
        android:layout_alignStart="@+id/etGiven" />

</RelativeLayout>
