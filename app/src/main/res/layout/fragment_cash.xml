<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ap.snehil.kosten.Fragments.CashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSeaGreen"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.12"
                    android:text="Date :"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.43"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.13"
                    android:text="Expenditure(Rs) :"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/etCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.42"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Upload Bill Img :"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:id="@+id/ibUploadImg"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button"
                    app:srcCompat="@drawable/paperclip" />
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="Add new expense :"
                    android:textColor="@android:color/white" />
                <ImageButton
                    android:id="@+id/btnAddToList"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button"
                    app:srcCompat="@drawable/addtolist"/>


            </LinearLayout>


        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCashList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />


    </LinearLayout>
</FrameLayout>
